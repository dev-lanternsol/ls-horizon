
{% capture children %}
  {% content_for 'blocks' %}
{% endcapture %}

{% render 'gallery', children: children, settings: block.settings, shopify_attributes: block.shopify_attributes %}

{% schema %}
{
  "name": "Gallery",
  "tag": null,
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "@theme"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view",
      "label": "Slides per view",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "slides_per_scroll",
      "label": "Slides to scroll",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "use_mobile_settings",
      "label": "Use different settings for mobile",
      "default": false
    },
    {
      "type": "range",
      "id": "mobile_slides_per_view",
      "label": "Mobile slides per view",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1,
      "visible_if": "{{ block.settings.use_mobile_settings == true }}"
    },
    {
      "type": "range",
      "id": "mobile_slides_per_scroll",
      "label": "Mobile slides to scroll",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1,
      "visible_if": "{{ block.settings.use_mobile_settings == true }}"
    },
    {
      "type": "header",
      "content": "Gallery Settings"
    },
    {
      "type": "range",
      "id": "duration",
      "label": "Auto scroll every (seconds)",
      "min": 0,
      "max": 15,
      "step": 1,
      "default": 3,
      "unit": "s"
    },
    {
      "type": "paragraph",
      "content": "Auto scroll set to 0, this means that the auto scroll feature is disabled.",
      "visible_if": "{{ block.settings.duration == 0 }}"
    },
    {
      "type": "select",
      "id": "separator_type",
      "label": "Separator type",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "line",
          "label": "Line"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Arrow settings"
    },
    {
      "type": "checkbox",
      "id": "show_arrows_on_desktop",
      "label": "Show arrows on desktop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows_on_mobile",
      "label": "Show arrows on mobile",
      "default": true
    },
    {
      "type": "select",
      "id": "arrows_position",
      "label": "Arrows position",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "mobile_arrows_position",
      "label": "Mobile arrows position",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "arrows_visibility",
      "label": "Arrows visibility",
      "options": [
        {
          "value": "always",
          "label": "Always"
        },
        {
          "value": "hover",
          "label": "On hover"
        }
      ],
      "default": "always",
      "visible_if": "{{ block.settings.show_arrows == true }}"
    },
    {
      "type": "image_picker",
      "id": "custom_arrows",
      "label": "Custom arrows",
      "info": "You can upload a SVG file to replace the default arrows. Only one image is needed, it will be flipped for the left arrow.",
      "visible_if": "{{ block.settings.show_arrows == true }}"
    },
    {
      "type": "range",
      "id": "arrows_width",
      "label": "Arrows width",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30,
      "visible_if": "{{ block.settings.show_arrows == true and block.settings.custom_arrows != blank }}"
    },
    {
      "type": "header",
      "content": "Dots settings"
    },
    {
      "type": "checkbox",
      "id": "show_dots",
      "label": "Show dots",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "t:categories.layout"
    }
  ]
}
{% endschema %}