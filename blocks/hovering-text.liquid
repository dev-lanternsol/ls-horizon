{% assign block_settings = block.settings %}
{% assign icon_block_class = 'icon-block__media icon-block-' | append: block.id %}

{% if block_settings.box_icon != blank %}
  {% capture icon %}
    {% render 'icon-or-image',
      image_upload: block_settings.box_icon,
      width: block_settings.icon_width,
      mobile_width: block_settings.width-mobile,
      class_name: icon_block_class,
      attributes: block.shopify_attributes
    %}
  {% endcapture %}
{% endif %}

{% if block_settings.hovering_box_icon != blank %}
  {% capture icon_hover %}
    {% render 'icon-or-image',
      image_upload: block_settings.hovering_box_icon,
      width: block_settings.icon_width,
      mobile_width: block_settings.width-mobile,
      class_name: icon_block_class,
      attributes: block.shopify_attributes
    %}
  {% endcapture %}
{% endif %}

<div class="hovering-box hovering-box__content--{{ block.settings.hovering_type }} {% if block.settings.hovering_type == 'above' %}hovering-box__content--{{ block.settings.hovering_position }}{% endif %}" data-hovering-type="{{ block.settings.hovering_type }}" data-block-id="{{ block.id }}">
  <div class="box__hover">
    {% if block_settings.box_icon != blank %}
      <div class="icon_box">{{ icon }}</div>
    {% endif %}
    {% if block_settings.box_text != blank %}
      {% render 'text', block: block, fallback_text: block_settings.box_text %}
    {% endif %}
  </div>
  {% if block_settings.hovering_content != blank %}
    <div class="hovering-box__hover-text">
      {% if block_settings.hovering_box_icon != blank %}
        <div class="icon_hover_box">{{ icon_hover }}</div>
      {% endif %}
      <div class="rte">
        {{ block_settings.hovering_content }}
      </div>
    </div>
  {% endif %}
</div>

{% if block_settings.hovering_type == 'replace' %}
<script>
  (function() {
    const blockId = '{{ block.id }}';
    const element = document.querySelector('[data-block-id="{{ block.id }}"]');
    if (!element) return;

    let currentMode = null;

    function applyHoverOrClick() {
      const isMobile = window.innerWidth <= 1200;
      const newMode = isMobile ? 'mobile' : 'desktop';
      
      if (currentMode === newMode) return;
      currentMode = newMode;

      element.classList.remove('active');

      if (isMobile) {
        element.removeEventListener('mouseenter', handleMouseEnter);
        element.removeEventListener('mouseleave', handleMouseLeave);
        element.addEventListener('click', handleClick);
        document.addEventListener('click', handleOutsideClick);
      } else {
        element.removeEventListener('click', handleClick);
        document.removeEventListener('click', handleOutsideClick);
        element.addEventListener('mouseenter', handleMouseEnter);
        element.addEventListener('mouseleave', handleMouseLeave);
      }
    }

    function closeAllOthers() {
      document.querySelectorAll('[data-hovering-type="replace"]').forEach(el => {
        if (el !== element) {
          el.classList.remove('active');
        }
      });
    }

    function handleClick(e) {
      e.stopPropagation();
      const isActive = element.classList.contains('active');
      closeAllOthers();
      element.classList.toggle('active', !isActive);
    }

    function handleOutsideClick(e) {
      if (!element.contains(e.target)) {
        element.classList.remove('active');
      }
    }

    function handleMouseEnter() {
      closeAllOthers();
      element.classList.add('active');
    }

    function handleMouseLeave() {
      element.classList.remove('active');
    }

    applyHoverOrClick();
    window.addEventListener('resize', applyHoverOrClick);
  })();
</script>
{% endif %}

